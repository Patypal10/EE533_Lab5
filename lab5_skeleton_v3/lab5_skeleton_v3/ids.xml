    		<nf:type>generic_hardware32</nf:type>
		</nf:register>

		<nf:register>
    		<nf:name>la_data_3</nf:name>
    		<nf:description>LA captured data [127:96]</nf:description>
    		<nf:type>generic_hardware32</nf:type>
		</nf:register>

